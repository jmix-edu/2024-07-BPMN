<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://orderLineDetailView.title"
      focusComponent="form">
    <data>
        <instance id="orderLineDc"
                  class="com.company.bpmdemo.entity.OrderLine">
            <fetchPlan extends="_base">
                <property name="pizzaType" fetchPlan="_base"/>
                <property name="pizzaEater" fetchPlan="_base"/>
                <property name="pizzaOrder" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="orderLineDc">
            <entityPicker id="pizzaTypeField" property="pizzaType">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textArea id="specialRequirementsField" height="9.5em" property="specialRequirements"/>
            <entityPicker id="pizzaEaterField" property="pizzaEater">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <entityPicker id="pizzaOrderField" property="pizzaOrder">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
