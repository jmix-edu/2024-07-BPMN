<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://placeOrderProcessForm.title">
    <layout>
        <formLayout>
            <textField datatype="string" id="deliveryNimberField"
                       label="msg://placeOrderProcessForm.variable.deliveryNimber" required="true"/>
            <entityPicker enabled="false" id="pizzaTypeField" label="msg://placeOrderProcessForm.variable.pizzaType"
                          metaClass="PizzaType">
            </entityPicker>
            <textArea enabled="false" id="specialReuirementsField"
                      label="msg://placeOrderProcessForm.variable.specialReuirements"/>
            <entityPicker enabled="false" id="pizzaEaterField" label="msg://placeOrderProcessForm.variable.pizzaEater"
                          metaClass="User">
            </entityPicker>
            <entityPicker enabled="false" id="approverField" label="msg://placeOrderProcessForm.variable.approver"
                          metaClass="User">
            </entityPicker>
            <textField datatype="string" enabled="false" id="approverMessageField"
                       label="msg://placeOrderProcessForm.variable.approverMessage"/>
        </formLayout>
        <hbox id="actionsPanel">
            <button id="completeBtn" icon="CHECK" text="msg://placeOrderProcessForm.completeTask" themeNames="primary"/>
        </hbox>
    </layout>
</view>