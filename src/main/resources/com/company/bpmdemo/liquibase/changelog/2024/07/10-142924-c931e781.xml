<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="bpm-demo">
        <createTable tableName="ORDER_LINE">
            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ORDER_LINE"/>
            </column>
            <column name="UUID" type="UUID"/>
            <column name="PIZZA_TYPE_ID" type="VARCHAR(255)"/>
            <column name="SPECIAL_REQUIREMENTS" type="CLOB"/>
            <column name="PIZZA_EATER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="PIZZA_ORDER_ID" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="bpm-demo">
        <createTable tableName="PIZZA_ORDER">
            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PIZZA_ORDER"/>
            </column>
            <column name="UUID" type="UUID"/>
            <column name="INITIATOR_ID" type="UUID"/>
            <column name="APPROVER_ID" type="UUID"/>
            <column name="DELIVERY_NUMBER" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="OPENED" type="DATETIME"/>
            <column name="CLOSED" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="bpm-demo">
        <createTable tableName="PIZZA_TYPE">
            <column name="ID" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PIZZA_TYPE"/>
            </column>
            <column name="PRICE" type="INT"/>
            <column name="UUID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="bpm-demo">
        <createIndex indexName="IDX_ORDER_LINE_PIZZA_EATER" tableName="ORDER_LINE">
            <column name="PIZZA_EATER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PIZZA_EATER_ID" baseTableName="ORDER_LINE"
                                 constraintName="FK_ORDER_LINE_ON_PIZZA_EATER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="5" author="bpm-demo">
        <createIndex indexName="IDX_ORDER_LINE_PIZZA_ORDER" tableName="ORDER_LINE">
            <column name="PIZZA_ORDER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PIZZA_ORDER_ID" baseTableName="ORDER_LINE"
                                 constraintName="FK_ORDER_LINE_ON_PIZZA_ORDER" referencedColumnNames="ID"
                                 referencedTableName="PIZZA_ORDER"/>
    </changeSet>
    <changeSet id="6" author="bpm-demo">
        <createIndex indexName="IDX_ORDER_LINE_PIZZA_TYPE" tableName="ORDER_LINE">
            <column name="PIZZA_TYPE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PIZZA_TYPE_ID" baseTableName="ORDER_LINE"
                                 constraintName="FK_ORDER_LINE_ON_PIZZA_TYPE" referencedColumnNames="ID"
                                 referencedTableName="PIZZA_TYPE"/>
    </changeSet>
    <changeSet id="7" author="bpm-demo">
        <createIndex indexName="IDX_PIZZA_ORDER_APPROVER" tableName="PIZZA_ORDER">
            <column name="APPROVER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="APPROVER_ID" baseTableName="PIZZA_ORDER"
                                 constraintName="FK_PIZZA_ORDER_ON_APPROVER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="8" author="bpm-demo">
        <createIndex indexName="IDX_PIZZA_ORDER_INITITOR" tableName="PIZZA_ORDER">
            <column name="INITIATOR_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="INITIATOR_ID" baseTableName="PIZZA_ORDER"
                                 constraintName="FK_PIZZA_ORDER_ON_INITIATOR" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>